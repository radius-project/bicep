{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "functions": [],
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/dnszones",
      "apiVersion": "2018-05-01",
      "name": "myZone",
      "location": "global"
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}', 'oam', 'app')]"
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Components",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'oam', 'app', 'backend')]",
      "properties": {
        "run": {
          "container": {
            "image": "test/test-image:latest",
            "env": [
              {
                "name": "LOCATION",
                "value": "[reference(resourceId('Microsoft.Network/dnszones', 'myZone'), '2018-05-01', 'full').location]"
              }
            ]
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'oam', 'app'), '/')[0], split(format('{0}/{1}', 'oam', 'app'), '/')[1])]",
        "[resourceId('Microsoft.Network/dnszones', 'myZone')]"
      ]
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Deployments",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'oam', 'app', 'dep')]",
      "properties": {
        "components": [
          {
            "componentName": "[format('{0}/{1}', 'backend', 'backend')]"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'oam', 'app'), '/')[0], split(format('{0}/{1}', 'oam', 'app'), '/')[1])]",
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications/Components', split(format('{0}/{1}', 'backend', 'backend'), '/')[0], split(format('{0}/{1}', 'backend', 'backend'), '/')[1], split(format('{0}/{1}', 'backend', 'backend'), '/')[2])]"
      ]
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Components",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'oam', 'app', 'thingy')]",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'oam', 'app'), '/')[0], split(format('{0}/{1}', 'oam', 'app'), '/')[1])]"
      ]
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Deployments",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'oam', 'app', 'implicit')]",
      "properties": {
        "components": [
          {
            "componentName": "thingy"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'oam', 'app'), '/')[0], split(format('{0}/{1}', 'oam', 'app'), '/')[1])]",
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications/Components', split(format('{0}/{1}/{2}', 'oam', 'app', 'thingy'), '/')[0], split(format('{0}/{1}/{2}', 'oam', 'app', 'thingy'), '/')[1], split(format('{0}/{1}/{2}', 'oam', 'app', 'thingy'), '/')[2])]"
      ]
    }
  ],
  "outputs": {}
}